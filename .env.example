# Anthropic API key for AI chat and study generation
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key for text embeddings (RAG vector search)
OPENAI_API_KEY=sk-proj-...

# Groq API key (optional)
GROQ_API_KEY=gsk_...

# Server port (default: 3000)
PORT=3000

# API authentication secret (optional — if not set, auth is disabled)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_SECRET=

# Allowed CORS origins (comma-separated, default: http://localhost:5173,http://localhost:3000)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Google Gemini API key for slideshow image generation via Nano Banana Pro (optional — text slideshows work without it)
GEMINI_API_KEY=AIza...

# Gemini image model override (optional, default: gemini-3-pro-image-preview)
# GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview
